{
   "compilerOptions": {
     "target": "es5",
     "module": "commonjs",
     "declaration": true,
     "outDir": "dist/lib",
     "declarationDir": "dist/types",
     "esModuleInterop": true,
     "forceConsistentCasingInFileNames": true,
     "strict": true,
     "skipLibCheck": true,
     "sourceMap": true,
     "isolatedModules": true,
     "jsx": "react-jsx"
   },
   "include": ["src/**/*"]
 }